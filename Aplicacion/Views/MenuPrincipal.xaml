<Page x:Class="Aplicacion.Views.MenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplicacion.Views"
      mc:Ignorable="d" 
      Height="200" Width="300"
      Title="MenuPrincipal">

    <Grid>
        <Button x:Name="btnUsuario" Grid.Row="0" Margin="40 15" Click="btnUsuario_Click">Usuarios</Button>
        <Button x:Name="btnSolicitud" Grid.Row="1" Margin="40 15" Click="btnSolicitud_Click">Solicitudes</Button>
        <Button x:Name="btnInspeccion" Grid.Row="2" Margin="40 15" Click="btnInspeccion_Click">Inspecciones</Button>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
